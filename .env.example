# =============================================================================
# Peloton Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# This is the root configuration file - all services read from here

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=peloton_db
POSTGRES_USER=peloton
POSTGRES_PASSWORD=your_secure_password_here

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20

# -----------------------------------------------------------------------------
# Backend API
# =============================================================================

NODE_ENV=development
PORT=3000
API_VERSION=v1

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# -----------------------------------------------------------------------------
# External APIs
# -----------------------------------------------------------------------------
# HSL Digitransit API (if needed in future)
# DIGITRANSIT_SUBSCRIPTION_KEY=your_subscription_key_here

# -----------------------------------------------------------------------------
# Data Pipeline
# -----------------------------------------------------------------------------
PIPELINE_CHUNK_SIZE=10000
PIPELINE_BATCH_SIZE=10000
PIPELINE_MAX_WORKERS=4
PIPELINE_TIMEZONE=Europe/Helsinki
